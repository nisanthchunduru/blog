{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/backend/*": ["../backend/*"]
    }
  },
  "include": ["./**/*", "../backend/**/*"],
  "exclude": ["node_modules", "dist"]
}
